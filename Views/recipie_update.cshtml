<head>
  <link rel="stylesheet" href="../../Content/css/bootstrap.css" type="text/css">
  <link rel="stylesheet" href="../../Content/css/styles.css" type="text/css">
</head>

<div class="container">
  <h3>@Model.GetName()</h3>

  <form action="/recipies/update/@Model.GetId()" method="post">
    <input name='_method' type='hidden' value='PATCH'>
    <input type="text" name="new-description" placeholder="Enter new Name:" required>
    <input type="text" name="new-rating" placeholder="Enter new Rating:" required>
    <button type="submit" name="button">Submit</button>
  </form>
</div>
